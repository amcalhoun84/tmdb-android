<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/watchlist_card"
        android:layout_width="125dp"
        android:layout_height="175dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/watchlist_picture"
            android:layout_width="125dp"
            android:layout_height="187.5dp"
            android:scaleType="center"
            android:foreground="@drawable/gradient" />

        <TextView
            android:id="@+id/wl_media_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:text="media_type"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/wl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/wl_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/wl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/remove_wl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/ic_baseline_remove_circle_outline_24" />
    </androidx.cardview.widget.CardView>



</LinearLayout>